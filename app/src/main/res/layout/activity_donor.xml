<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.project.map.project.Donor">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#3DC1CD"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donor "
            android:id="@+id/textView8"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff"
            android:textSize="40dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            android:background="#3DC1CD"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
        />


    </RelativeLayout>

    <Button
        android:id="@+id/addB"

        android:text="View my list"
        android:textColor="#ffffffff"
        android:textSize="20sp"

        android:layout_width="230dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignLeft="@+id/relativeLayout"
        android:layout_alignStart="@+id/relativeLayout"
        android:layout_marginTop="155dp"
        android:layout_alignRight="@+id/relativeLayout"
        android:layout_alignEnd="@+id/relativeLayout" />
    <Button
        android:id="@+id/addFood"

        android:text="Add food"
        android:textColor="#ffffffff"
        android:textSize="20sp"

        android:layout_width="230dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/addB"
        android:layout_alignLeft="@+id/addB"
        android:layout_alignStart="@+id/addB"
        android:layout_marginTop="32dp"
        android:layout_alignRight="@+id/addB"
        android:layout_alignEnd="@+id/addB" />
</RelativeLayout>
